{ 
  "hosting": { 
    "public": "build", 
    "ignore": [ 
      "firebase.json", 
      "**/.*", 
      "**/node_modules/**" 
    ], 
    "rewrites": [ 
      { 
        "source": "/api/math-solver", 
        "function": "solveMath" 
      }, 
      { 
        "source": "**", 
        "destination": "/index.html" 
      } 
    ] 
  }, 
  "functions": { 
    "source": "functions", 
    "runtime": "nodejs20" 
  } 
}
